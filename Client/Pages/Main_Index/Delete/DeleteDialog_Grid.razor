@using Tesing2.Shared
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IJSRuntime JsRuntime
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudDialog>
	<DialogContent>
		<MudTextField Value="@item.id" Label="ID" ReadOnly="true" />
		<MudTextField Value="@item.Name" Label="Name" ReadOnly="true" />
		<MudTextField Value="@item.Class" Label="Class" ReadOnly="true" />
		<MudTextField Value="@item.Phone" Label="Phone" ReadOnly="true" />
	</DialogContent>
	<DialogActions>
		<MudButton Variant="Variant.Filled" value="Delete" Class="mt-4 ml-4" Color="Color.Success" @onclick="Confirm">Delete</MudButton>
		<MudButton Variant="Variant.Outlined" value="Cancel" Class="mt-4 ml-4" Color="Color.Default" @onclick="Cancel">Cancel</MudButton>
	</DialogActions>
</MudDialog>
